<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/test_post_bg"
    android:layoutDirection="rtl"

>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/post_bg"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_1sdp"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layoutDirection="ltr"


            android:background="@drawable/post_bg"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"

            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tweet_PIHA_profile_img"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="0"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/b"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tweet_PIHA_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:paddingRight="3dp"
                    android:text="User name"
                    android:textColor="#0894f8"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:paddingEnd="@dimen/_1sdp"
                    android:layout_weight="0"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-12-11"
                    android:textSize="@dimen/_10ssp"

                    android:id="@+id/tweet_PIHA_date_txt"
                    android:paddingRight="@dimen/_1sdp" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl">


                <ImageButton
                    android:id="@+id/popup_menu_PIHA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_more_vert_black_20"
                    android:backgroundTint="@color/white"
                    />

            </LinearLayout>



        </LinearLayout>

        <TextView
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Love new twitter feathers, looking forword for new addation feather"
            android:id="@+id/tweet_PIHA_txt"

           android:autoLink="all"
            android:paddingTop="@dimen/_5sdp"
            android:textAlignment="gravity"

            android:background="@color/white"
            android:paddingBottom="@dimen/_2sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="#040101"/>

        <ImageView
            android:contentDescription="can't load image"
            android:background="@drawable/post_bg"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:src="@drawable/wise"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:id="@+id/tweet_PIHA_photo"


            android:layout_weight="0"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_height="@dimen/_200sdp" />


    </LinearLayout>

</LinearLayout>