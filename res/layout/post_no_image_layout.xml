<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/test_post_bg"
    android:layoutDirection="rtl">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/post_bg"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_1sdp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:background="@drawable/post_bg"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tweet_PNH_profile_img"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"

                android:layout_weight="0"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/b"/>

            <TextView
                android:id="@+id/tweet_PNH_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_weight="1"
                android:background="@color/white"


                android:text="User name"

                android:textColor="#0894f8"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <TextView
                android:paddingEnd="@dimen/_1sdp"
                android:layout_weight="0"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2021-1-11"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_12sdp"
                android:id="@+id/tweet_PNH_date"
                android:paddingRight="@dimen/_1sdp"
               />


        </LinearLayout>

        <TextView
            android:id="@+id/tweet_PNH_text"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Love new twitter feathers, looking forword for new addation feather"
            android:paddingTop="@dimen/_5sdp"
            android:background="@color/white"
            android:paddingBottom="@dimen/_2sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="#040101"
            android:autoLink="all"
            />

        <LinearLayout

            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_5sdp"

            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <com.google.android.material.button.MaterialButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tweet_PNH_btn"
                android:layout_marginRight="@dimen/_8sdp"
                android:text="save"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/gray"
                app:strokeWidth="@dimen/_2sdp"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>